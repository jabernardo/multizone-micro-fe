
FROM docker.io/node:lts-alpine as builder

ENV HOST=0.0.0.0
ENV PORT=3000
ENV DOMAIN=about

RUN addgroup --system host && \
          adduser --system -G host host

WORKDIR /build

COPY . monorepo

WORKDIR /build/monorepo

RUN npm install
RUN npm i tslib
RUN npm i -g next
RUN npx nx run host:build:production


# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build host`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t host`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system host && \
          adduser --system -G host host

COPY --from=builder  /build/monorepo/dist/apps/host host
RUN chown -R host:host .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
# RUN npm --prefix host --omit=dev -f install

WORKDIR /app/host

RUN npm i tslib
RUN npm i -g next

CMD [ "npm", "start" ]
