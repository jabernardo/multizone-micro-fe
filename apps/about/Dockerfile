# Build the docker image with `npx nx docker-build about`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t about`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3001

WORKDIR /app

RUN addgroup --system about && \
          adduser --system -G about about

COPY dist/apps/about about
RUN chown -R about:about .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
#RUN npm --prefix about --omit=dev -f install

WORKDIR /app/about

RUN npm i tslib
RUN npm i -g next

CMD [ "npm", "start" ]
